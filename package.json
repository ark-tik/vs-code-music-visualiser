{
  "name": "multiline-cursor-audio-visualizer",
  "displayName": "Multiline Cursor Audio Visualizer",
  "description": "Transform VS Code into a real-time music visualizer using multiline cursors. Watch your code dance to audio frequencies from microphone or system audio.",
  "version": "1.0.0",
  "publisher": "ark-tik",
  "author": {
    "name": "ark-tik"
  },
  "license": "MIT",
  "homepage": "https://github.com/ark-tik/vs-code-music-visualiser#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ark-tik/vs-code-music-visualiser.git"
  },
  "bugs": {
    "url": "https://github.com/ark-tik/vs-code-music-visualiser/issues"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "audio",
    "music",
    "visualizer",
    "frequency",
    "cursor",
    "multiline",
    "real-time",
    "fft",
    "microphone",
    "sound"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "audioVisualizer.stop",
        "title": "Stop Audio Visualizer",
        "category": "Audio Visualizer"
      },
      {
        "command": "audioVisualizer.configure",
        "title": "Configure Audio Visualizer",
        "category": "Audio Visualizer"
      },
      {
        "command": "audioVisualizer.startMicrophone",
        "title": "Start Audio Visualizer (Microphone)",
        "category": "Audio Visualizer"
      },
      {
        "command": "audioVisualizer.startSystemAudio",
        "title": "Start Audio Visualizer (System Audio)",
        "category": "Audio Visualizer"
      }
    ],
    "configuration": {
      "title": "Audio Visualizer",
      "properties": {
        "audioVisualizer.sensitivity": {
          "type": "number",
          "default": 5,
          "minimum": 0.1,
          "maximum": 5,
          "description": "Global audio sensitivity multiplier - higher values make cursors more responsive to audio"
        },
        "audioVisualizer.frequencyRange": {
          "type": "object",
          "default": {
            "min": 20,
            "max": 20000
          },
          "description": "Frequency range for visualization"
        },
        "audioVisualizer.autoConfigureCursorCount": {
          "type": "boolean",
          "default": true,
          "description": "Automatically configure cursor count based on visible lines (recommended)"
        },
        "audioVisualizer.cursorCount": {
          "type": "number",
          "default": 64,
          "minimum": 8,
          "maximum": 256,
          "description": "Number of cursors for visualization (only used when auto-configuration is disabled)"
        },
        "audioVisualizer.maxCursors": {
          "type": "number",
          "default": 128,
          "minimum": 16,
          "maximum": 512,
          "description": "Maximum number of cursors when auto-configuring"
        },
        "audioVisualizer.updateRate": {
          "type": "number",
          "default": 30,
          "minimum": 30,
          "maximum": 120,
          "description": "Update rate in FPS"
        },
        "audioVisualizer.enableDebugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose debug logging (for development/troubleshooting)"
        },
        "audioVisualizer.smoothing": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "maximum": 1,
          "description": "Cursor movement smoothing (0.0 = no smoothing, 1.0 = maximum smoothing)"
        },
        "audioVisualizer.useDefaultVisualizationFile": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open a default visualization file with rich content for better visual experience"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18.19.121",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@picovoice/pvrecorder-node": "^1.2.0",
    "fft.js": "^1.0.1",
    "node-wav": "^0.0.2"
  }
}
